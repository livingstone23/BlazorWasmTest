<h3>ListadoPeliculas</h3>

@if (Movies == null)
{
    <text>Cargando...</text>
}
else if (Movies.Count() == 0)
{
    <text>No hay registros para mostrar...</text>
}
else
{


    @foreach (var movie in Movies)
    {
        <PeliculaIndividual Movie="movie"/>
    }

}

@code {

    [Parameter] public List<Movie> Movies { get; set; }

    

    

}
